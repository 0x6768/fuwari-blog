---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";
import { Icon } from "astro-icon/components";
import { execSync } from 'child_process';
let GitCommitHash = execSync('git rev-parse --short HEAD').toString().trim() || 'unknown';
const currentYear = new Date().getFullYear();
---


<div class="bg-[oklch(95%_0.01_var(--hue))] dark:bg-[oklch(15%_0.01_var(--hue))] rounded-xl p-6 md:p-8 flex flex-col items-center gap-4">
  <div class="text-sm text-center text-gray-600 dark:text-gray-300 space-y-3">
    <div>
      &copy; <span id="copyright-year">2023-{currentYear}</span> {profileConfig.name}（<Icon name="mdi:source-branch" class="inline-block align-middle -translate-y-[1px]" /><a class="transition link font-medium hover:opacity-80" href=`https://github.com/0x6768/fuwari-blog/commit/${GitCommitHash}`>{GitCommitHash}</a>）All Rights Reserved.
    </div>
    
    <div class="flex items-center justify-center gap-4">
      <a class="transition link text-[var(--primary)] font-medium hover:opacity-80" 
         target="_blank" 
         href={url('rss.xml')}>
        RSS
      </a>
      <span class="text-gray-400">•</span>
      <a class="transition link text-[var(--primary)] font-medium hover:opacity-80" 
         target="_blank" 
         href={url('sitemap-index.xml')}>
        Sitemap
      </a>
      <span class="text-gray-400">•</span>
      <a class="transition link text-[var(--primary)] font-medium hover:opacity-80" 
      target="_blank" 
      href="https://hm.7003410.xyz/share/dV8cZEmYB2VXKyJs/">
      Analytics
      </a>
    </div>
    
    <div class="flex items-center justify-center gap-3 pt-2">
      <a href="https://astro.build/" class="transition link text-[var(--primary)] font-medium hover:opacity-80">Powered by Astro</a>
      <span class="text-gray-400">•</span>
      <a href="https://github.com/saicaca/fuwari" class="transition link text-[var(--primary)] font-medium hover:opacity-80">Theme by Fuwari</a>
      <span class="text-gray-400">•</span>
      <a href="https://twikoo.js.org" class="transition link text-[var(--primary)] font-medium hover:opacity-80">Comments by Twikoo</a>
    </div>
    
    <div class="flex items-center justify-center gap-3 pt-2">
      <a href="https://umami.is" class="transition link text-[var(--primary)] font-medium hover:opacity-80">Analytics by Umami</a>
      <span class="text-gray-400">•</span>
      <a href="https://github.com/features/actions" class="transition link text-[var(--primary)] font-medium hover:opacity-80">Built by GitHub Actions</a>
      <span class="text-gray-400">•</span>
      <a href="https://netlify.com/" class="transition link text-[var(--primary)] font-medium hover:opacity-80">Hosting by Netlify</a>
    </div>

<div id="custom" class="mt-6">
  <script defer src="https://hm.7003410.xyz/script.js" data-website-id="ece50090-230b-4122-8d7e-89a6c9ff7fab"></script>
  <script defer data-api="https://bsz.dusays.com:9001/api" src="https://jsd.onmicrosoft.cn/npm/penndu@17.0.0/bsz.js"></script>
  <script src="/sw.js"  is:inline></script>
  
</div>
    
  
